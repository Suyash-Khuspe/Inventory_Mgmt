@model Inventory_Mgmt.Models.product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white text-center">
            <h3>Are you sure you want to delete this product?</h3>
        </div>

        <div class="card-body">
            <h4 class="card-title text-center mb-4">Product Details</h4>
            <dl class="row">
                <dt class="col-sm-4 text-right">
                    @Html.DisplayName("Product Name")
                </dt>
                <dd class="col-sm-8">
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.product_name)</p>
                </dd>

                <dt class="col-sm-4 text-right">
                    @Html.DisplayName("Product Quantity")
                </dt>
                <dd class="col-sm-8">
                    <p class="form-control-plaintext">@Html.DisplayFor(model => model.product_qnty)</p>
                </dd>
            </dl>
        </div>

        <div class="card-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-1">
                        <input type="submit" value="Delete" class="btn btn-outline-danger btn-block" />
                    </div>
                    <div class="col-md-1">
                        @Html.ActionLink("Cancel", "DisplayProduct", "Product", new { }, new { @class = "btn btn-outline-secondary btn-block" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

