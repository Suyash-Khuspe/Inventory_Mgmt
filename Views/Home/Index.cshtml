@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .hero-section {
            background: url('https://d3mxt5v3yxgcsr.cloudfront.net/courses/6376/course_6376_image.png') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            color: white;
            text-align: center;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Adjust overlay to darken the background image */
        }

        .hero-content {
            z-index: 1;
        }

            .hero-content h1 {
                font-size: 4rem;
                font-weight: bold;
            }

            .hero-content p {
                font-size: 1.2rem;
                margin-top: 15px;
            }

            .hero-content a {
                margin-top: 20px;
            }

        .features-section {
            padding: 60px 0;
        }

            .features-section .feature-box {
                padding: 20px;
                background-color: #fff;
                border-radius: 10px;
                box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="overlay"></div>
        <div class="container hero-content">
            <h1>Inventory Management System</h1>
            <p>Streamline and automate your inventory process efficiently.</p>
            <marquee> <h2>Start Your Journey with us</h2></marquee>
</div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="text-center mb-5">
                <h2>Why Choose Us?</h2>
                <p class="text-muted">Our Inventory Management System provides you with the tools you need to manage your stock seamlessly.</p>
            </div>

            <div class="row text-center">
                <div class="col-md-4">
                    <div class="feature-box p-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/3039/3039386.png" alt="Feature 1" width="80">
                        <h3 class="mt-3">Real-Time Tracking</h3>
                        <p>Get real-time updates and monitor your stock with ease.</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-box p-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/2933/2933796.png" alt="Feature 2" width="80">
                        <h3 class="mt-3">Automated Reports</h3>
                        <p>Generate automatic reports to help you make informed decisions.</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="feature-box p-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/3159/3159026.png" alt="Feature 3" width="80">
                        <h3 class="mt-3">User-Friendly Interface</h3>
                        <p>Navigate through the system easily with our intuitive design.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Inventory Management System. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

